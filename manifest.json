{
  "manifest_version": 3,
  "name": "Salesforce Toolkit for Dev",
  "version": "1.1",
  "description": "Enhance Salesforce Developer Docs with summaries, tooltips, and copy/export tools.",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [],
  "host_permissions": ["https://developer.salesforce.com/*"],
  "content_scripts": [
    {
      "matches": ["https://developer.salesforce.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
